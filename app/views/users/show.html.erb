<div class="container" style="width:100%; padding: 0%;" style="max-width: 100%; height: 550px !important;">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag("carousel1.png", alt: 'Crear evento',style: "width:100%; height: 550px !important;") %>
      </div>
      <div class="item">
        <%= image_tag("carousel2.png", alt: 'Buscar evento',style: "width:100%; height: 550px !important;") %>
      </div>
      <div class="item">
        <%= image_tag("carousel3.png", alt: 'Buscar evento',style: "width:100%; height: 550px !important;") %>
      </div>
      <% if false %>
      <div class="item">
        <%= image_tag("c3.PNG", alt: 'Seleccion de puntos',style: "width:100%;") %>
        <div class="carousel-caption">
        
        </div>
      </div>
      <div class="item">
        <%= image_tag("c4.PNG", alt: 'Mis vehiculos',style: "width:100%;") %>
        <div class="carousel-caption">
        
        </div>
      </div>
      <div class="item active">
        <%= image_tag("c5.PNG", alt: 'Buscar evento',style: "width:100%;") %>
        <div class="carousel-caption">
        
        </div>
      </div>
      <div class="item active">
        <%= image_tag("c6.PNG", alt: 'Editar perfil',style: "width:100%;") %>
        <div class="carousel-caption">
        
        </div>
      </div>
      <div class="item active">
        <%= image_tag("c7.PNG", alt: 'Contactanos',style: "width:100%;") %>
        <div class="carousel-caption">
        
        </div>
      </div>
      <% end %>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
  
  
