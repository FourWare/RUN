<br></br>
<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-12 user-details">
            <div class="user-image">
                <% if @user.avatar.present? == false %>
                    <%= image_tag("default-avatar.jpg", width: 100, height: 100, alt: @user.name, title: @user.name, class: "img-circle") %>
                <% else %>
                    <%= image_tag(@user.avatar, alt: @user.name, width: 100, height: 100, title: @user.name, class: "img-circle") %>
                <% end %>
                
            </div>
            <div class="user-info-block">
                <div class="user-heading">
                    <h3><%= @user.name %></h3>
                    <br></br>
                </div>
                <ul class="navigation">
                    <li class="active">
                        <a data-toggle="tab" href="#information">
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#settings">
                            <span class="glyphicon glyphicon-signal"></span>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#email">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </a>
                    </li>
                </ul>
                <div class="user-body">
                    <div class="tab-content">
                        <div id="information" class="tab-pane active" style="padding: 0% 10% 3% 10%;">
                            <h4>Información de la cuenta</h4>
                            </br>
                            <div class="tab-content" style="padding: 1% 5% 3% 5%;">
                                <div class="row" style="width: 100%;">
                                    <div class="col-lg-6" style="margin-top: 2%;">
                                        <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Nick:</label>
                                        <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                            <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.nick %></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" style="margin-top: 2%;">
                                        <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Correo:</label>
                                        <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                            <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.email %></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" style="margin-top: 2%;">
                                        <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Correo:</label>
                                        <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                            <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.email %></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" style="margin-top: 2%;">
                                        <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Teléfono:</label>
                                        <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                            <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.phone %></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" style="margin-top: 2%;">
                                        <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Carrera:</label>
                                        <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                            <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.career %></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" style="margin-top: 2%;">
                                        <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Fecha de nacimiento:</label>
                                        <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                            <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.date_of_birth.strftime("%F") %></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="settings" class="tab-pane" style="padding: 0% 10% 3% 10%;">
                            <h4>Actividad en RunApp</h4>
                            </br>
                            <div class="tab-content" style="padding: 1% 1% 3% 5%; background: rgba(255, 255, 255, 0)">
                                <div class="row">
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(233, 65, 65, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-bed"></span>
                                        <h4>Vehículos usados</h4>
                                        <span class="label label-warning" style="font-size: 20px;"><%= @countVehiclesUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(255, 211, 31, 0.7);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-road"></span>
                                        <h4>Rutas creadas</h4>
                                        <span class="label label-danger" style="font-size: 20px;"><%= @countRoutesUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(31, 106, 255, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <h4>Pasajeros en rutas</h4>
                                        <span class="label label-info" style="font-size: 20px;"><%= @countPassengersUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(233, 65, 65, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-arrow-up"></span>
                                        <h4>Precio más costoso</h4>
                                        <span class="label label-warning" style="font-size: 20px;">$<%= @expensivePriceUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(255, 211, 31, 0.7);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-arrow-down"></span>
                                        <h4>Precio más económico</h4>
                                        <span class="label label-danger" style="font-size: 20px;">$<%= @cheapPriceUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(31, 106, 255, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <h4>En RunApp desde</h4>
                                        <span class="label label-info" style="font-size: 20px;"><%= @userCreatedAt %></span>
                                      </p>
                                    </div>
                                </div>                                
                            </div>
                        </div>
                        <div id="email" class="tab-pane">
                            <h4>Dejar Comentario</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</div>
</div>