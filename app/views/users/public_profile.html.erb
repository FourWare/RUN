<br></br>
<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-12 user-details">
            <div class="user-image">
                <% if @user.avatar.present? == false %>
                    <%= image_tag("default-avatar.jpg", width: 100, height: 100, alt: @user.name, title: @user.name, class: "img-circle") %>
                <% else %>
                    <%= image_tag(@user.avatar, alt: @user.name, width: 100, height: 100, title: @user.name, class: "img-circle") %>
                <% end %>
                
            </div>
            <div class="user-info-block">
                <div class="user-heading">
                    <h3><%= @user.name %></h3>
                    <br></br>
                </div>
                <ul class="navigation">
                    <li class="active">
                        <a data-toggle="tab" href="#information">
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#settings">
                            <span class="glyphicon glyphicon-signal"></span>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#email">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </a>
                    </li>
                </ul>
                <div class="user-body">
                    <div class="tab-content">
                        <div id="information" class="tab-pane active" style="padding: 0% 10% 3% 10%;">
                            <h4>Información de la cuenta</h4>
                            </br>
                            <div class="row" style="border: 1px solid #428BCA; padding: 1% 1% 3% 1%;">
                                <div class="col-lg-6" style="margin-top: 2%;">
                                    <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Nick:</label>
                                    <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                        <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.nick %></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-6" style="margin-top: 2%;">
                                    <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Correo:</label>
                                    <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                        <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.email %></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-6" style="margin-top: 2%;">
                                    <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Correo:</label>
                                    <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                        <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.email %></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-6" style="margin-top: 2%;">
                                    <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Teléfono:</label>
                                    <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                        <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.phone %></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-6" style="margin-top: 2%;">
                                    <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Carrera:</label>
                                    <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                        <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.career %></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-6" style="margin-top: 2%;">
                                    <label class="col-lg-12 control-label" style="text-align: left; width: 100%; padding: 0%;">Fecha de nacimiento:</label>
                                    <div class="input-group col-lg-12" style="text-align: left; width: 100%; padding: 0%;">
                                        <textarea rows="1" class="form-control" id='usernameRegister' type='text' readonly='true' style="margin: 0%; border: none; padding-left: 5%; width: 100%; resize: none;"><%= @user.date_of_birth.strftime("%F") %></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="settings" class="tab-pane" style="padding: 0% 10% 3% 10%;">
                            <h4>Actividad en RunApp</h4>
                            </br>
                            <div class="tab-content" style="padding: 0%; background: rgba(255, 255, 255, 0)">
                                <div class="col-xs-12" style="padding: 0%;">
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(233, 65, 65, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-bed"></span>
                                        <h4 style="font-size: 130%;">Vehículos usados</h4>
                                        <span class="label" style="font-size: 20px; background: #DC143C;"><%= @countVehiclesUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(255, 211, 31, 0.5);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-road"></span>
                                        <h4 style="font-size: 130%;">Rutas creadas</h4>
                                        <span class="label" style="font-size: 20px; background: #B8860B;"><%= @countRoutesUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(31, 106, 255, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <h4 style="font-size: 130%;">Pasajeros en rutas</h4>
                                        <span class="label label-info" style="font-size: 20px;"><%= @countPassengersUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(89, 250, 57, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-arrow-up"></span>
                                        <h4 style="font-size: 130%;">Precio más costoso</h4>
                                        <span class="label" style="font-size: 20px; background: #3CB371;">$<%= @expensivePriceUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(163, 233, 201, 0.7);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-arrow-down"></span>
                                        <h4 style="font-size: 130%;">Precio más económico</h4>
                                        <span class="label" style="font-size: 20px; background: #008B8B;">$<%= @cheapPriceUser %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(225, 143, 228, 0.3);">
                                      <p class="bootcards-summary-item" id="pCardData">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                        <h4 style="font-size: 130%;">En RunApp desde</h4>
                                        <span class="label" style="font-size: 20px; background: #8B008B;"><%= @userCreatedAt %></span>
                                      </p>
                                    </div>
                                    <div class="col-xs-12" style="border: solid white; padding: 2%; white">
                                        <h3>Resumen de calificaciones</h3>
                                        <div class="col-xs-12" <div class="col-xs-6 col-sm-4" style="border: solid white; padding: 2%; background: rgba(31, 106, 255, 0.3);">
                                            <div class="pull-left">
        				                        <div style="height:9px; margin:5px 0;">5 <span class="glyphicon glyphicon-star">&nbsp</span></div>
                                    		</div>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= @barWidths[4] %>%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"><%= @countStars[4] %></div>
                                            </div>
                                            <div class="pull-left">
        				                        <div style="height:9px; margin:5px 0;">4 <span class="glyphicon glyphicon-star">&nbsp</span></div>
                                    		</div>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" style="width: <%= @barWidths[3] %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= @countStars[3] %></div>
                                            </div>
                                            <div class="pull-left">
        				                        <div style="height:9px; margin:5px 0;">3 <span class="glyphicon glyphicon-star">&nbsp</span></div>
                                    		</div>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped progress-bar-info" role="progressbar" style="width: <%= @barWidths[2] %>%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"><%= @countStars[2] %></div>
                                            </div>
                                            <div class="pull-left">
        				                        <div style="height:9px; margin:5px 0;">2 <span class="glyphicon glyphicon-star">&nbsp</span></div>
                                    		</div>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped progress-bar-warning" role="progressbar" style="width: <%= @barWidths[1] %>%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"><%= @countStars[1] %></div>
                                            </div>
                                            <div class="pull-left">
        				                        <div style="height:9px; margin:5px 0;">1 <span class="glyphicon glyphicon-star">&nbsp</span></div>
                                    		</div>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped progress-bar-danger" role="progressbar" style="width: <%= @barWidths[0] %>%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"><%= @countStars[0] %></div>
                                            </div>
                                        </div>
                                        <div class="col-xs-6 col-sm-6" style="border: solid white; padding: 2%; background: rgba(31, 106, 255, 0.3);">
                                            <p class="bootcards-summary-item" id="pCardData">
                                            <span class="glyphicon glyphicon-star-empty"></span>
                                            <h4 style="font-size: 120%;">Calificación general</h4>
                                            <span class="label label-info" style="font-size: 20px;"><%= @totalScore %></span>
                                            </p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6" style="border: solid white; padding: 2%; background: rgba(31, 106, 255, 0.3);">
                                            <p class="bootcards-summary-item" id="pCardData">
                                            <span class="glyphicon glyphicon-tasks"></span>
                                            <h4 style="font-size: 120%;">Total de calificaciones</h4>
                                            <span class="label label-info" style="font-size: 20px;"><%= @countStars[5] %></span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="email" class="tab-pane">
                            <h4>Dejar Comentario</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</div>
</div>