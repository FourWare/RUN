<% if user_signed_in? %>
    <% if current_user.email == "runappunal@gmail.com" %>
        <script type="text/javascript">
            window.location.href="admin/home"  // put your correct path in a string here
        </script>
    <% else %>
        <script type="text/javascript">
            window.location.href="usuario/inicio"  // put your correct path in a string here
        </script>
    <% end %>

<% else %>
    <header class="intro-header">
        <div class="container">
            <div class="intro-message">
                <h1><%= @app %></h1>
                <h3>Bienvenido a <%= @app %>, la mejor aplicacion de carpooling</h3>
                <hr class="intro-divider">
                <h3 style="color: white;">Encuentra a <%= @app %> en: </h3>
                <ul class="list-inline intro-social-buttons">
                    <li class="list-inline-item">
                        <a href="https://twitter.com/runappUnal" class="btn btn-secondary btn-lg" target="_blank">
                            <button type="button" class="btn btn-md">
                                <%= image_tag("twitter.png", width: '25', height: '25', alt: 'twitter', class: "logo") %> Twitter
                            </button>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://github.com/FourWare/RUN" class="btn btn-secondary btn-lg" target="_blank">
                            <button type="button" class="btn btn-md">
                                <%= image_tag("github.png", width: '25', height: '25', alt: 'github', class: "logo") %> GitHub
                            </button>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://www.facebook.com/groups/MateriasyElectivasFacilesUN2.0/" class="btn btn-secondary btn-lg" target="_blank">
                            <button type="button" class="btn btn-md">
                                <%= image_tag("facebook.png", width: '25', height: '25', alt: 'facebook', class: "logo") %> Facebook
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    
    <!-- Page Content -->
    <section class="content-section-a" id="servicios">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="section-heading">Servicios</h1>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4" style="background: #D4E6F7; height: 270px;">
                    <span class="fa-stack fa-4x">
                        <%= image_tag("innovation.png", width: '110', height: '110', alt: 'Car', class: "logo") %>
                    </span>
                    <br><br/>
                    <h4 class="service-heading" style="border-bottom: solid;">Innovación</h4>
                    <p class="text-danger">Comparte tu vehiculo y genera una ayuda para los demas y para ti en cuanto a gastos y tiempo</p>
                </div>
                <div class="col-md-4" style="background: #FEE1E1; height: 270px;">
                    <span class="fa-stack fa-4x">
                        <%= image_tag("responsive.png", width: '110', height: '110', alt: 'Car', class: "logo") %>
                    </span>
                    <br><br/>
                    <h4 class="service-heading" style="border-bottom: solid;">Diseño</h4>
                    <p class="text-danger">Para que  puedas usar nuestra app desde cualquier dispositivo sin problemas de vistas por el tamaño de los dispositivos</p>
                </div>
                <div class="col-md-4" style="background: #CEF1C4; height: 270px;">
                    <span class="fa-stack fa-4x">
                        <%= image_tag("security.png", width: '110', height: '110', alt: 'Car', class: "logo") %>
                    </span>
                    <br><br/>
                    <h4 class="service-heading" style="border-bottom: solid;">Seguridad</h4>
                    <p class="text-danger">Gracias a las validaciones por medio del correo institucional y los codigos de confirmacion, te ofrecemos un mayor nivel de seguridad</p>
                </div>
            </div>
        </div>
    </section>
    
    
    <!-- Team -->
    <section class="content-section-b" id="nosotros">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="section-heading" style="color: black;">Nuestro equipo</h1>
                    <h4 class="section-subheading text-muted" style="color: black;">Miembros de la Universidad Nacional de Colombia.</h4>
                </div>
            </div>
            <br><br/>
            <div class="row">
                <div class="col-lg-3 text-center">
                    <div class="team-member">
                        <%= image_tag("team/borja.png", alt: 'Miguel Angel Borja', class: "mx-auto img-circle") %>
                        <h4 style="color: black;">Miguel Angel Borja</h4>
                        <p class="text-muted" style="color: black;">ScrumMaster</p>
                    </div>
                </div>
                <div class="col-lg-3 text-center">
                    <div class="team-member">
                        <%= image_tag("team/rueda.png", alt: 'Camilo Rueda', class: "mx-auto img-circle") %>
                        <h4 style="color: black;">Camilo Rueda</h4>
                        <p class="text-muted" style="color: black;">Desarrollador</p>
                    </div>
                </div>
                <div class="col-lg-3 text-center">
                    <div class="team-member">
                        <%= image_tag("team/smo.jpg", alt: 'Santiago Márquez', class: "mx-auto img-circle") %>
                        <h4 style="color: black;">Santiago Marquez</h4>
                        <p class="text-muted" style="color: black;">Desarrollador</p>
                    </div>
                </div>
                <div class="col-lg-3 text-center">
                    <div class="team-member">
                        <%= image_tag("team/villamil.jpg", alt: 'Miguel Villamil', class: "mx-auto img-circle") %>
                        <h4 style="color: black;">Miguel Villamil</h4>
                        <p class="text-muted" style="color: black;">Desarrollador</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Contact -->
    <section class="banner" id="contactenos">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="section-heading" style="color: white;">Contáctanos</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form id="contactForm" name="sentMessage" novalidate>
                        <div class="row">
                            <%= form_for @contact do |f| %>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <%= f.text_field :name, :required => true, class: 'form-control', style: "background-color: white; width: 100%; color: black;", placeholder: "Nombre *" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.email_field :email, :required => true, class: 'form-control', placeholder: 'Correo *', style: "background-color: white; width: 100%; color: black;" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.text_field :phone, :required => true, class: 'form-control', placeholder: 'Teléfono *', style: "background-color: white; width: 100%; color: black;" %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <%= f.text_area :message, :required => true, class: 'form-control', rows: 4, placeholder: 'Mensaje', style: "background-color: white; width: 100%; color: black;" %>
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <%= f.submit "Enviar", class: "btn btn-primary btn-lg", type: "submit" %>
                                </div>
                            <% end %>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Footer -->
    <footer style="background-color: #1c222a">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    
                </div>
                <div class="col-md-4">
                    <ul class="list-inline social-buttons">
                        <li class="list-inline-item">
                            <a href="http://unal.edu.co/" target="_blank" style="color: white">Universidad Nacional de Colombia</a>
                            <br>
                            <span class="copyright" style="color: white; font-size: 80%;">Copyright &copy; <%= @app %> 2017. All Rights Reserved</span>
                        </li>
                    </ul>
                </div>
               
            </div>
        </div>
    </footer>
    
    <div id="myModal" class="modal" role="dialog">
        <div class="modal-dialog">
            <div class="wthree-form" id="myModalRegister" style="width: 100%; background-color: rgba(0, 0, 0, 0.9);">
                <button type="button btn-lg" class="close">
                    <span class="close glyphicon glyphicon-remove-sign" onclick="document.getElementById('myModal').style.display='none'"></span>
                </button>
                <h2 style="text-align: center;">Inicia sesión</h2>
                <div class="w3l-login form">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), name: "login_form") do |f| %>
                        <div class="form-sub-w3 form-group clearfix">
		                    <%= f.email_field :email, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Correo', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", type: 'email', required: "" %>
		                </div>
		                <div class="form-sub-w3 form-group clearfix">
		                    <%= f.password_field :password, autocomplete: "off", class: "form-control", type: 'password', id: 'passwordRegister', placeholder: 'Contraseña', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
		                </div>
                        <% if devise_mapping.rememberable? -%>
            	            <div class="check_box">
            	                <%= f.check_box :remember_me, id: 'checkboxRegister', type: 'checkbox', class: 'checkbox', style: "display: inline-block;" %>
            	                <%= f.label :__recordarme, style: "color: white;" %>
            	            </div>
            	        <% end -%>
            	        <div class="actions submit-agileits">
            	            <%= f.submit "Entrar", id: "submitRegister", class: "btn btn-success btn-lg", type: 'submit' %>
            			</div>    
                    <% end %>
                    <hr>
	                <div class="devise-links">
	                    <div class="col-lg-6">
        	            	<%= link_to user_facebook_omniauth_authorize_path do %>
        	            	    <button class="btn btn-facebook" style="width: 100%"><%= image_tag("facebook-login.ico", width: '25', height: '25', alt: 'facebook', class: "logo", align: "left") %> Facebook</button>
        	            	<% end %>
        	            </div>
        	            <div class="col-lg-6">
        	            	<%= link_to "/home/auth/google_oauth2" do %>
        	            	    <button class="btn btn-google" style="width: 100%"><%= image_tag("google-login.ico", width: '25', height: '25', alt: 'facebook', class: "logo", align: "left") %> Google</button>
        	            	<% end %>
        	            </div>
    	            	</br>
    	            	<%= link_to "¿Eres nuevo en RunApp? Regístrate", new_registration_path(resource_name) %><br />
    		          	<%= link_to "¿Olvidaste tu contraseña?", "/home/recuperacion_contrasena" %><br />
        	        </div>
                </div>
            </div>
    	</div>
    </div>
    
    <div id="myModal2" class="modal" role="dialog">
        <div class="modal-dialog">
            <div class="wthree-form" id="myModalRegister">
                <button type="button btn-lg" class="close">
                    <span class="close glyphicon glyphicon-remove-sign" onclick="document.getElementById('myModal2').style.display='none'"></span>
                </button>
            
                <h2 style="text-align: center;">Regístrate</h2>
		        <div class="w3l-login form">
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :multipart => true) do |f| %>
				    	<%= devise_error_messages! %>
				    	<br></br>
				    	<div class="form-sub-w3">
				    		<div class="row" style="padding: 0% 5%;">
					    		<div class="col-sm-12 text-center">
						        	<em style="color: white; display: block; font-size: 90%;">Si deseas, escoge tu foto de perfil.</em>
						            <%= f.label :avatar, class: "carrier-wave-field" do %>
							    		<%= f.file_field :avatar, title: "Por favor escoja el archivo", style: "width: 100%;" %>
		    							<%= f.hidden_field :avatar_cache %>
		    						<% end %>
						       	</div>
						       	<br></br>
						       	<div class="col-sm-12 form-sub-w3 form-group clearfix">
		                            <%= f.text_field :name, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Nombre', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
		                        </div>
						       	<div class="col-sm-6 form-sub-w3 form-group clearfix">
			      					<%= f.text_field :nick, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Nick', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
			      				</div>
					      		<div class="col-sm-6 form-sub-w3 form-group clearfix">
					        		<%= f.text_field :career, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Carrera', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
			      				</div>
					        	<div class="col-sm-12 form-sub-w3 form-group clearfix">
					        		<em style="color: white; display: block;">Fecha de nacimiento</em>
			      					<%= f.date_select :date_of_birth, { 
			      						:order => [:day, :month, :year], 
								    	:start_year => Time.now.year - 15, 
								    	:end_year => 1950, 
									    :prompt => {
									    	day: 'Día', month: 'Mes', year: 'Año'
									    }},
									    {:class => "form-control date-select"}
								 	%>
								 	<br></br>
			      				</div>
					    	</div>
					        	<div class="col-sm-12 form-sub-w3 form-group clearfix">
				            	    <%= f.email_field :email, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Correo', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;",  type: 'email', required: "" %>
					            </div>
					        	<div class="col-sm-6 form-sub-w3 form-group clearfix">
					            	<%= f.password_field :password, class: "form-control", autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Contraseña', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
								    <% if @minimum_password_length %>
								    	<em style="color: red;">(<%= @minimum_password_length %> characters minimum)</em>
								    <% end %>
					            </div>
					        	<div class="col-sm-6 form-sub-w3 form-group clearfix">
					            	<%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Confirmación contraseña', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
								</div>
					     	</div>
					     	    
					        <div class="form-group">
					        	<hr>
					            <div class="actions submit-agileits">
			        				<%= f.submit "Registrarme", id: "submitRegister", class: "btn btn-primary btn-lg", type: 'submit', style: "width: 50%;" %>
								</div>
								<div class="devise-links", style: "width: 50%;">
			      					<%= link_to "¿Ya eres miembro de RunApp? Ingresa", new_session_path(resource_name) %><br />  
			      				</div>
					        </div>
					    </div>
	      	  	    <% end %>
		        </div>
            </div>
        </div>
    </div>
<% end %>
