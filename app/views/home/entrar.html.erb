<div class="container" style="overflow-y: auto;">
    <div class="modal-dialog">
        <div class="wthree-form" id="myModalRegister" style="width: 80%; background-color: rgba(0, 0, 0, 0.9)">
	        <h2 style="text-align: center; font-size: ">Inicia sesión</h2>
	        <div class="w3l-login form">
	            <%= form_for(resource, as: resource_name, url: session_path(resource_name), name: "login_form") do |f| %>
	                <div class="form-sub-w3 form-group clearfix">
		                <%= f.email_field :email, id: 'usernameRegister', autofocus: true, placeholder: 'Correo', style: "width: 100%", type: 'email', required: "" %>
		            </div>
		            <div class="form-sub-w3 form-group clearfix">
	                    <%= f.password_field :password, autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Contraseña', style: "width: 100%", required: "" %>
		            </div>
		            <% if devise_mapping.rememberable? -%>
		                <div class="check_box">
		                    <%= f.check_box :remember_me, id: 'checkboxRegister', type: 'checkbox', class: 'checkbox', style: "display: inline-block;" %>
		                    <%= f.label :__recordarme, style: "color: white;" %>
		                </div>
		            <% end -%>
		            <div class="actions submit-agileits">
		                <%= f.submit "Entrar", id: "submitRegister", class: "btn btn-primary btn-lg", type: 'submit' %>
		                <% if notice %>
	      					<p class="alert alert-success"><%= notice %></p>
	    				<% end %>
			    		<% if alert %>
			      			<p class="alert alert-danger"><%= alert %></p>
			    		<% end %>
					</div>
	            <% end %>
	            <hr>
	            <div class="devise-links">
	            	<%= link_to user_facebook_omniauth_authorize_path do %>
	            	    <button class="btn btn-facebook" style="width: 50%"><%= image_tag("facebook-login.ico", width: '25', height: '25', alt: 'facebook', class: "logo", align: "left") %> Facebook</button>
	            	<% end %>
	            	<br></br>
	            	<%= link_to "/home/auth/google_oauth2" do %>
	            	    <button class="btn btn-google" style="width: 50%"><%= image_tag("google-login.ico", width: '25', height: '25', alt: 'facebook', class: "logo", align: "left") %> Google</button>
	            	<% end %>
	            	<br></br>
	            	<%= link_to "¿Eres nuevo en RunApp? Regístrate", new_registration_path(resource_name) %><br />
		          	<%= link_to "¿Olvidaste tu contraseña?", "/home/recuperacion_contrasena" %><br />
		        </div>
			</div>
    	</div>
    </div>
</div>

<!-- Footer -->
    <footer style="position: relative; bottom: -5%;  background-color: rgba(0,0,0,0.7);">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright">Copyright &copy; <%= @app %> 2017. All Rights Reserved</span>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline social-buttons">
                        <li class="list-inline-item">
                            <a href="http://unal.edu.co/" target="_blank" style="color: white">Universidad Nacional de Colombia</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline quicklinks">
                        <li class="list-inline-item" style="color:black;">
                            <% if user_signed_in? %>
                                <strong  style="text-transform: capitalize;"><%= current_user.name %> (<%= current_user.provider %>)</strong> |
                                <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
                                <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                            <% else %>
                            	<%= link_to "/home/registro" do %>
                            		<li class="nav-item"><button class="btn btn-default">Registrarme</button></li>
                            	<% end %>
                            <% end %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>