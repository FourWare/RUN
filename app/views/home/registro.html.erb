<div class="container" style="overflow-y: auto;" >
    <div class="modal-dialog">
    	<div class="wthree-form" id="myModalRegister">
            <h2 style="text-align: center;">Regístrate</h2>
			<div class="w3l-login form">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :multipart => true) do |f| %>
					<%= devise_error_messages! %>
				    <br></br>
				    <div class="form-sub-w3">
				    	<div class="row" style="padding: 0% 5%;">
					   		<div class="col-sm-12 text-center">
					        	<em style="color: white; display: block; font-size: 90%;">Si deseas, escoge tu foto de perfil.</em>
					            <%= f.label :avatar, class: "carrier-wave-field" do %>
						    		<%= f.file_field :avatar, title: "Por favor escoja el archivo", style: "width: 100%;" %>
		    						<%= f.hidden_field :avatar_cache %>
		    					<% end %>
					       	</div>
					       	<br></br>
					       	<div class="col-sm-12 form-sub-w3 form-group clearfix">
		                           <%= f.text_field :name, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Nombre', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
		                    </div>
					       	<div class="col-sm-6 form-sub-w3 form-group clearfix">
			      				<%= f.text_field :nick, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Nick', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
			      			</div>
					   		<div class="col-sm-6 form-sub-w3 form-group clearfix">
					       		<%= f.text_field :career, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Carrera', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
			      			</div>
					       	<div class="col-sm-12 form-sub-w3 form-group clearfix">
					     		<em style="color: white; display: block;">Fecha de nacimiento</em>
			      				<%= f.date_select :date_of_birth, { 
			      					:order => [:day, :month, :year], 
							    	:start_year => Time.now.year - 15, 
							    	:end_year => 1950, 
								    :prompt => {
								    	day: 'Día', month: 'Mes', year: 'Año'
								    }},
								    {:class => "form-control date-select"}
							 	%>
			      			</div>
					    </div>
					    <div class="col-sm-12 form-sub-w3 form-group clearfix">
				            <%= f.email_field :email, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Correo', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;",  type: 'email', required: "" %>
					    </div>
					    <div class="col-sm-6 form-sub-w3 form-group clearfix">
					       	<%= f.password_field :password, class: "form-control", autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Contraseña', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
						    <% if @minimum_password_length %>
							  	<em style="color: red;">(<%= @minimum_password_length %> characters minimum)</em>
							<% end %>
					    </div>
					    <div class="col-sm-6 form-sub-w3 form-group clearfix">
					       	<%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Confirmación contraseña', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
						</div>
					</div>
			        <div class="form-group">
			        	<hr>
			            <div class="actions submit-agileits">
	        				<%= f.submit "Registrarme", id: "submitRegister", class: "btn btn-primary btn-lg", type: 'submit', style: "width: 50%;" %>
						</div>
						<div class="devise-links", style: "width: 50%;">
	      					<%= link_to "¿Ya eres miembro de RunApp? Ingresa", new_session_path(resource_name) %><br />  
	      				</div>
			        </div>
			    <% end %>
			</div>
        </div>
    </div>
</div>

	<!-- Footer -->
<footer style="background-color: #1c222a">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <ul class="list-inline social-buttons">
                    <li class="list-inline-item">
                        <a href="http://unal.edu.co/" target="_blank" style="color: white">Universidad Nacional de Colombia</a>
                        <br>
                        <span class="copyright" style="color: white; font-size: 70%;">Copyright &copy; <%= @app %> 2017. All Rights Reserved</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>