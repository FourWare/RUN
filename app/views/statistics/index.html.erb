<% if current_user.email == 'miaborjaac@unal.edu.co' %>

  <br></br>
  <div class="container table" style="background-color: rgba(0,0,0,0.3); padding: 1%; width: 80%;">
    <h1 style="color: white;">Estadisticas</h1>
    <h2 style="color: white;">Tabla de estadisticas.</h2>
    <table class="table table-striped table-bordered table-hover" style="border: solid gray;">
      <tr>
        <th style="text-align:center; background-color: #373a3c; color: white;">Descripcion</th>
        <th style="text-align:center; background-color: #373a3c; color: white;">Valor</th> 
      </tr>
      <tr>
        <td style="color: black">Vehiculos agregados al sistema</td>
        <td style="color: black"><%= @countVehicles%></td>
      </tr>
      <tr>
        <td style="color: black">Usuarios registrados en el sistema</td>
        <td style="color: black"><%= @countUsers%></td>
      </tr>
      <tr>
        <td style="color: black">Rutas creadas en el sistema</td>
        <td style="color: black"><%=@countRoutes%></td>
      </tr>
      <tr>
        <td style="color: black">Rutas creadas la ultima semana</td>
        <td style="color: black"><%= @routesLastWeek%></td>
      </tr>
    </table>
    <h2 style="color: white;">Rutas creadas por dia.</h2>
    <%= line_chart @routesCreatedPerDay, legend: true, curve: false, label: "rutas", xtitle: "Dia", ytitle: "Usuarios", title: "Rutas creadas por dia" %>
    <h2 style="color: white;">Usuarios creados por dia.</h2>
    <%= line_chart @usersCreatedPerDay, legend: true,curve: false, label: "Usuarios", xtitle: "Dia", ytitle: "Usuarios", title: "Usuarios creados por dia"%>
    <h2 style="color: white;">Carros por dia</h2>
    <%= line_chart @carsUsedPerDay,legend: true, curve: false, label: "Carros", xtitle: "Dia", ytitle: "Carros", title: "Carros usados por dia" %>
    <h2 style="color: white;">Motos por dia</h2>
    <%= line_chart @bikesUsedPerDay,legend: true, curve: false, label: "Motos", xtitle: "Dia", ytitle: "Motos", title: "Motos usadas por dia" %>
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <%= link_to "/statistics.pdf", target: "_blank" do %>
          <button id="submitRegister" class="btn btn-primary btn-lg" type='button' display='inline-block' style="width: 100%; white-space: normal;"><i class="glyphicon glyphicon-download"></i> Ver PDF</button>
        <% end %>
      </div>
      <div class="col-lg-3"></div>
    </div>
    <div class="col-lg-4"></div>
  </div>
    
<% else %>
    <div class="container">
        <br></br> <br></br> <br></br> 
        <div class="container" style="background-color: rgba(0, 0, 0, 0.3); width: 90%; height: 40%; color:white; border: solid red;">
            <div id="spam">
                <h1>Acceso denegado</h1>
                <p>Solo los administradores pueden acceder.<br/><br/>
            </div>
            <div class="container" style="background-color: rgba(200, 10, 0, 0.9); width: 90%; height: 50%; color:white">
                <br><br>
                <h4><p>Vuelva a la p√°gina de inicio<br/></h4>
                <a href = "/"><button id="submitRegister" class="btn btn-primary btn-lg" type="submit">Atras</button></a>
                <br><br>
            </div>
        </div>    
    </div>
<% end %>