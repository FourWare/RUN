<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>From lat</th>
      <th>From lng</th>
      <th>To lat</th>
      <th>To lng</th>
      <th>Waypoints</th>
      <th>Departure</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= route.description %></td>
        <td><%= route.from_lat %></td>
        <td><%= route.from_lng %></td>
        <td><%= route.to_lat %></td>
        <td><%= route.to_lng %></td>
        <td><%= route.waypoints %></td>
        <td><%= route.departure %></td>
        <td><%= route.cost %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path %>
