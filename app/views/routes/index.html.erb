<p id="notice"><%= notice %></p>

<h1>Bucador de rutas</h1>

<div class="container" style="background-color: lightgray; padding: 1%;">
  <table class="table table-striped table-bordered table-hover" style="border: solid black;">
    <thead style="background-color: #373a3c; color: white;">
      <tr>
        <th style="text-align:center;">Título</th>
        <th style="text-align:center;">Descripción</th>
        <th style="text-align:center;">Latitud origen</th>
        <th style="text-align:center;">Longitud origen</th>
        <th style="text-align:center;">Latitud destino</th>
        <th style="text-align:center;">Longitud destino</th>
        <th style="text-align:center;">Puntos de recorrido</th>
        <th style="text-align:center;">Costo</th>
        <th style="text-align:center;">Salida</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @routes.each do |route| %>
        <tr>
          <td style="text-align:center;"><%= route.title %></td>
          <td style="text-align:center;"><%= route.description %></td>
          <td style="text-align:center;"><%= route.from_lat %></td>
          <td style="text-align:center;"><%= route.from_lng %></td>
          <td style="text-align:center;"><%= route.to_lat %></td>
          <td style="text-align:center;"><%= route.to_lng %></td>
          <td style="text-align:center;"><%= route.waypoints %></td>
          <td style="text-align:center;"><%= route.cost %></td>
          <td style="text-align:center;"><%= route.departure %></td>
          <td style="text-align:center;"><%= link_to 'Ver', route %></td>
          <td style="text-align:center;"><%= link_to 'Editar', edit_route_path(route) %></td>
          <td style="text-align:center;"><%= link_to 'Eliminar', route, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</br>