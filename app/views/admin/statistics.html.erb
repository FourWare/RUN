<% if current_user.email == 'runappunal@gmail.com' %>
    <br></br>
    <div class="container" style="background-color: lightgray; padding: 1%;">
        <h1 style="color: #155892;">Estadisticas</h1>
        
        <h2 style="color: #155892;">Tabla de estadisticas.</h2>
        
        <table class="table table-striped table-bordered table-hover" style="border: solid black;">
          <tr>
            <th style="text-align:center; background-color: #373a3c; color: white;">Descripcion</th>
            <th style="text-align:center; background-color: #373a3c; color: white;">Valor</th> 
          </tr>
          <tr>
            <td >Vehiculos agregados al sistema</td>
            <td><%= @countCar%></td>
          </tr>
          <tr>
            <td>Usuarios registrados en el sistema</td>
            <td><%= @countUser%></td>
          </tr>
          <tr>
            <td>Rutas creadas en el sistema</td>
            <td><%=@countRoutes%></td>
          </tr>
          <tr>
            <td>Rutas creadas la ultima semana</td>
            <td><%= @routesLastWeek%></td>
          </tr>
        </table>
        
        <h2 style="color: #155892;">Rutas creados por dia.</h2>
        
        <%= line_chart @routesCreatedPerDay, legend: true, curve: false, label: "rutas", xtitle: "Dia", ytitle: "Usuarios", title: "Rutas creadas por dia" %>
        
        <h2 style="color: #155892;">Usuarios creados por dia.</h2>
        
        <%= line_chart @usersCreatedPerDay, legend: true,curve: false, label: "Usuarios", xtitle: "Dia", ytitle: "Usuarios", title: "Usuarios creados por dia"%>
        
        <h2 style="color: #155892;">Vehiculos por modelo</h2>
         
        <%= pie_chart @carsPerModel, title: "Modelos mas usados", library: {pieSliceText:'value-and-percentage'} %>
        
        <h2 style="color: #155892;">Vehiculos por tipo</h2>
         
        <%= pie_chart @carsPerType, title: "Tipo de vehiculos usados", library: {pieSliceText:'value-and-percentage'} %>
        <button name="button" id="gotoPDF" class="btn btn-primary btn-lg" style="width: auto;" >Ver PDF</button>
    </div>
    
    
<% else %>
    <div class="container">
        <br></br> <br></br> <br></br> 
        <div class="container" style="background-color: #F84444; width: 90%; height: 40%; color:white">
            <div id="spam">
                <h1>Acceso denegado</h1>
                <p>Solo los administradores pueden acceder.<br/><br/>
            </div>
            <div class="container" style="background-color: gray; width: 90%; height: 50%; color:white">
                <br><br>
                <h4><p>Vuelva a la p√°gina de inicio<br/></h4>
                <a href = "/"><button id="submitRegister" class="btn btn-primary btn-lg" type="submit">Atras</button></a>
                <br><br>
            </div>
        </div>    
    </div>
<% end %>