<% if current_user.email == 'runappunal@gmail.com' %>
    <br></br>
    <div class="container table" style="background-color: rgba(0,0,0,0.8); padding: 1%;">
        <table class="table table-striped table-bordered table-hover" style="border: solid black;">
            <thead style="background-color: black; color: black;">
                <tr>
                    <th style="text-align:center;">Nombre</th>
                    <th style="text-align:center;">Nick</th>
                    <th style="text-align:center;">Carrera</th>
                    <th style="text-align:center;">Fecha de nacimiento</th>
                    <th style="text-align:center;">Correo</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td style="color: black"><%= user.name %></td>
                        <td style="text-align:center; color: black"><%= user.nick %></td>
                        <td style="text-align:center; color: black"><%= user.career %></td>
                        <td style="text-align:center; color: black"><%= user.date_of_birth %></td>
                        <td style="text-align:center; color: black"><%= user.email %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    
    <%= will_paginate @users, 
        renderer: BootstrapPagination::Rails, 
        :previous_label => "Anterior",
        :next_label => "Siguiente" 
    %>
<% else %>
    <div class="container" style="background-color: rgba(0,0,0,0.8); width: 100%; height: 100%; color:white">
        <div class="container">
            <br></br> <br></br> <br></br> 
            <div class="container" style="background-color: #F84444; width: 90%; height: 40%; color:white">
                <div id="spam">
                    <h1>Acceso denegado</h1>
                    <p>Solo los administradores pueden acceder.<br/><br/>
                </div>
                <div class="container" style="background-color: gray; width: 90%; height: 50%; color:white">
                    <br><br>
                    <h4><p>Vuelva a la p√°gina de inicio<br/></h4>
                    <a href = "/"><button id="submitRegister" class="btn btn-primary btn-lg" type="submit">Atras</button></a>
                    <br><br>
                </div>
            </div>    
        </div>
    </div>
<% end %>