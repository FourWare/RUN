<% if current_user.email == 'runappunal@gmail.com' %>
    <br></br>
    <div class="container table" style="background-color: rgba(0,0,0,0.3); padding: 1%;">
        <h1 style="color: white;">Usuarios</h1>
        <p style="color: white;">Número de usuarios: <%= @countUser %></p>
        <table class="table table-striped table-bordered table-hover" style="border: solid gray;">
            <thead style="background-color: #373a3c; color: white;">
                <tr>
                    <th style="text-align:center;">Name</th>
                    <th style="text-align:center;">Nick</th>
                    <th style="text-align:center;">Carrera</th>
                    <th style="text-align:center;">Fecha de nacimiento</th>
                    <th style="text-align:center;">Correo</th>
                    <th style="text-align:center;">Número de vehículos</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td style="color: black"><%= user.name %></td>
                        <td style="text-align:center; color: black"><%= user.nick %></td>
                        <td style="text-align:center; color: black"><%= user.career %></td>
                        <td style="text-align:center; color: black"><%= user.date_of_birth %></td>
                        <td style="text-align:center; color: black"><%= user.email %></td>
                        <% count = 0 %>
                        <% @countCarsUser.each do |c| %>
                            <% if c.user_id == user.id %>
                                <% count = count + 1 %>
                            <% end %>
                        <% end %>
                        <td style="text-align:center; color: black"><%= count %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    
    <%= will_paginate @users, 
        renderer: BootstrapPagination::Rails, 
        :previous_label => "Anterior",
        :next_label => "Siguiente",
        :container => true
    %>
<% else %>
    <div class="container">
        <br></br> <br></br> <br></br> 
        <div class="container" style="background-color: rgba(0, 0, 0, 0.3); width: 90%; height: 40%; color:white; border: solid red;">
            <div id="spam">
                <h1>Acceso denegado</h1>
                <p>Solo los administradores pueden acceder.<br/><br/>
            </div>
            <div class="container" style="background-color: rgba(200, 10, 0, 0.9); width: 90%; height: 50%; color:white">
                <br><br>
                <h4><p>Vuelva a la página de inicio<br/></h4>
                <a href = "/"><button id="submitRegister" class="btn btn-primary btn-lg" type="submit">Atras</button></a>
                <br><br>
            </div>
        </div>    
    </div>
<% end %>