<div class="container table" style="background-color: rgba(0,0,0,0.3); padding: 1%; width: 95%;">
  <h1 style="color: white;">Mis Vehículos</h1>
  <p style="color: white;">Número de vehículos: <%= @countCars %></p>
  <table class="table table-striped table-bordered table-hover" style="border: solid white; width: 95%; ">
    <thead style="background-color: #373a3c; color: white;">
      <tr>
        <th style="text-align:center;">Foto</th>
        <th style="text-align:center;">Marca</th>
        <th style="text-align:center;">Placa</th>
        <th style="text-align:center;" colspan="3">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td style="text-align:center; color: black;">
            <% if car.image.present? == false %>
              <%= image_tag("default-car.jpg", width: '40%', height: '50', class: 'image-circle') %>
            <% else %>
              <%= image_tag(car.image, width: '40%', height: '50', class: 'image-circle') %>
            <% end %>  
            
          </td>
          <td style="text-align:center; color: black;"><%= car.marca %></td>
          <td style="text-align:center; color: black;"><%= car.placa %></td>
          
          <td style="text-align:center; color: black;"><%= link_to 'Ver detalles', car %></td>
          <td style="text-align:center; color: black;"><%= link_to 'Eliminar', car, method: :delete, data: { confirm: '¿Estás seguro de eliminar este vehículo?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<h3 style="color: #155892;"><p id="notice"><%= notice %></p></h3>


