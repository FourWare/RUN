<div class="container" style="background-color: rgba(0,0,0,0.5)">
  <h2 style="text-align: center;">Crear un nuevo vehículo</h2>
  <hr>
  <%= form_with(model: @car,local: true) do |f| %>
	  <% if car.errors.any? %>
      <div id="error_explanation" style="color: red; background: rgba(0, 0, 0, 0.5);">
        <h2>No se pudo guardar el vehículo</h2>
        <ul>
          <% car.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  	<div class="row">
        <div class="col-md-12">
          <div class="text-center">
            <% if @car.image.present? == false %>
              <%= image_tag("default-car.jpg", width: '250', height: '250', class: 'image-circle') %>
            <% else %>
              <%= image_tag(@car.image, width: '250', height: '250', class: 'image-circle') %>
            <% end %>
            <em style="color: white; display: block;">Si deseas, pon la foto de tu vehículo.</em>
  					<%= f.label :image, class: "carrier-wave-field" do %>
  					  <%= f.file_field :image %>
  		    		<%= f.hidden_field :image_cache %>
  		      <% end %>
          </div>
        </div>
        
        <div class="col-md-12 personal-info">
          <hr>
          <h3>Información del vehículo</h3>
          <div class="form-sub-w3">
				    <div class="row" style="padding: 0% 5%;">
				      <div class="col-sm-6 form-sub-w3 form-group clearfix">
				        <%= f.text_field :placa, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Placa (AAA-111, BBB-222, ...)', type: 'text',  style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
		          </div>
		          <div class="col-sm-6 form-sub-w3 form-group clearfix">
		            <%= f.select(:tipo, options_for_select(
                  [["Elige el tipo del vehículo", ""], 
                    "Carro", 
                    "Moto"
                  ]),
                  { },
                  { 
                    id: 'usernameRegister',
                    class: "btn dropdown-toggle bs-placeholder btn-default",
                    style: "height: 20; margin: 5% 0% 0% 0%; float: left;"
                }) %>
			      	</div>
		          <div class="col-sm-6 form-sub-w3 form-group clearfix">
				        <%= f.text_field :modelo, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Modelo (1990, 2014, ...)', type: 'number', min: 1950, max: Time.current.year + 1, step: 1, style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
		          </div>
		          <div class="col-sm-6 form-sub-w3 form-group clearfix">
				        <%= f.text_field :marca, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Marca (Renault, Mazda, ...)', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%; text-transform: capitalize", required: "" %>
		          </div>
		          <div class="col-sm-6 form-sub-w3 form-group clearfix">
				        <%= f.text_field :color, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Color (Negro, Blanco, ...)', type: 'text', style: "height: 20; width: 100%; margin: 5% 0% 0% 0%; text-transform: capitalize", required: "" %>
		          </div>
		          <div class="col-sm-6 form-sub-w3 form-group clearfix">
				        <%= f.text_field :capacidad, class: "form-control", id: 'usernameRegister', autofocus: true, placeholder: 'Capacidad (2, 4, ...)', type: 'number', min: 1, step: 1, style: "height: 20; width: 100%; margin: 5% 0% 0% 0%;", required: "" %>
		          </div>
		          
		          <%= f.hidden_field :user_id, :value => current_user.id %>
		          
		          <div class="col-lg-3">
              </div>
              <div class="col-lg-3">
                  <%= f.submit "Crear", id: "submitRegister", class: "btn btn-primary btn-lg", type: 'submit', display: 'inline-block', style:"width: 100%;"%>
              </div>
              <div class="col-lg-3">
                <%= link_to cars_path do %>
                  <%= f.submit "Cancelar", id: "submitRegister", class: "btn btn-primary btn-lg", type: 'submit', display: 'inline-block', style: "width: 100%;" %>
                <% end %>
              </div>
              <div class="col-lg-3">
              </div>
		          
				    </div>
				  </div>
        </div>
    </div>
  <% end %>
  <hr>
</div>