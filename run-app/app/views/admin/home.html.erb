<div class="container">
    <table class="table table-striped table-bordered table-hover">
        <thead style="background-color: #373a3c; color: white;">
            <tr>
                <th style="text-align:center;">Name</th>
                <th style="text-align:center;">Nick</th>
                <th style="text-align:center;">Carrera</th>
                <th style="text-align:center;">Fecha de nacimiento</th>
                <th style="text-align:center;">Correo</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td style="text-align:center;"><%= user.nick %></td>
                    <td style="text-align:center;"><%= user.career %></td>
                    <td style="text-align:center;"><%= user.date_of_birth %></td>
                    <td style="text-align:center;"><%= user.email %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= will_paginate @users, 
    renderer: BootstrapPagination::Rails, 
    :previous_label => "Anterior",
    :next_label => "Siguiente" %>