<div class="container">
  <h1>Bienvenido a RunApp</h1>
  <p>Selecciona la opcion que desees</p> 
  <br>
</div>

<div class="container-fluid" style="height: 95%;">
  <div class="row">
    <div class="col-sm-4">
    	<div class="row">
        	<div class="col-sm-2" >
        	     <div class="item">
                    <%= image_tag("unal.png", alt: 'Escudo Unal') %>
                 </div>
        	</div>
            <div class="col-sm-12" >
               
                <br> <br>
                <br> <br>
          		<button type="button" class="btn btn-info btn-lg">Crear evento</button> <br> <br> 
          	 	<button type="button" class="btn btn-info btn-lg">Buscar evento</button> <br>
	        </div>
            <div class="col-sm-4" ></div>
        </div>
	</div>

    <div class="col-sm-4">
        <br>
        <div class="container">
            <h3>Funcionalidades</h3>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                  <li data-target="#myCarousel" data-slide-to="1"></li>
                  <li data-target="#myCarousel" data-slide-to="2"></li>
                  <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>
    
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
            
                  <div class="item active">
                    <%= image_tag("carousel1.png", alt: 'Crear evento',style: "width:100%;") %>
                    <div class="carousel-caption">
                      <h3>Crear evento</h3>
                     </div>
                  </div>
    
                  <div class="item">
                    <%= image_tag("carousel2.png", alt: 'Seleccion de puntos',style: "width:100%;") %>
                    <div class="carousel-caption">
                      <h3>Seleccionar puntos de partida y destino</h3>
                    </div>
                  </div>

                  <div class="item">
                    <%= image_tag("carousel3.png", alt: 'Buscar evento',style: "width:100%;") %>
                    <div class="carousel-caption">
                      <h3>Buscar evento</h3>
                    </div>
                  </div>
                
                  <div class="item">
                    <%= image_tag("carousel4.png", alt: 'Perfil',style: "width:100%;") %>
                    <div class="carousel-caption">
                      <h3>Perfil</h3>
                    </div>
                  </div>
               </div>
    
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
  </div>
</div>


<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
               
            </div>
            <div class="col-md-4">
                <ul class="list-inline social-buttons">
                    <li class="list-inline-item">
                        <a href="http://unal.edu.co/" target="_blank">Universidad Nacional de Colombia</a> <br>
                        <span class="copyright">Copyright &copy; <%= @app %> 2017. All Rights Reserved</span>
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
           
            </div>
        </div>
    </div>
</footer>