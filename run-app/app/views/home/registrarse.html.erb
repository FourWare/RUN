<div class="container">
  	<div class="jumbotron">
		<h1>RunApp</h1>
		<p> Registro</p>
	</div>
</div>

<div class="container">
	<div class="jumbotron">
	    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
    
            <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, type: 'text', class: 'form-control' %>
            </div>
    
            <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", type: 'password', class: 'form-control' %>
            </div>
    
            <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", type: 'password', class: 'form-control' %>
            </div>
    
    
            <div class="form-group">
                <div class="actions">
                    <%= f.submit "Registrarse", class: "btn btn-primary btn-lg", type: 'submit' %>
                </div>
            </div>
      
            <div class="devise-links">
	            <%= render "devise/shared/links" %>
	        </div>
        <% end %>
	</div>
</div>