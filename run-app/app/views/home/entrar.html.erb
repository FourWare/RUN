<!-- primer cuadro de texto, titulo, descripcion -->
	<div class="container">
		<div class="jumbotron">
			
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

	        <div class="form-group">
	          <%= f.label :email, class: 'control-label' %>
	          <%= f.email_field :email, autofocus: true, placeholder: 'user@unal.edu.co', type: 'text', class: 'form-control' %>
	        </div>

	        <div class="form-group clearfix">
	          <%= f.label :password, class: 'control-label',  for: 'password' %>
	          <%= f.password_field :password, autocomplete: "off", type: 'password', class: 'form-control' %>
	        </div>

	        <% if devise_mapping.rememberable? -%>
	          <div class="field">
	            <%= f.check_box :remember_me %>
	            <%= f.label :remember_me %>
	          </div>
	        <% end -%>

					<div class="form-group">
	        	<div class="actions col-md-12 text-center">
	          	<%= f.submit "Log In", class: "btn btn-primary btn-lg", type: 'submit' %>
	          </div>
	         </div>

          <div class="devise-links">
	          <%= render "devise/shared/links" %>
	        </div>
	      <% end %>
	      
			</div>
	</div>