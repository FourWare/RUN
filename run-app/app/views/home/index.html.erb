<div id="myModal" class="modal" style="background-color: rgba(0, 0, 0, 0.7);">
    <div class="wthree-form" id="myModalRegister" style="width: 40%; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <button type="button btn-lg" class="close">
            <span class="close glyphicon glyphicon-remove-sign" onclick="document.getElementById('myModal').style.display='none'"></span>
        </button>
    
        <h2 style="text-align: center; font-size: ">Inicia sesión</h2>
        <div class="w3l-login form">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), name: "login_form") do |f| %>
                <div class="form-sub-w3">
	                <%= f.email_field :email, id: 'usernameRegister', autofocus: true, placeholder: 'Correo', type: 'text', required: "" %>
	            </div>
	            <div class="form-sub-w3 form-group clearfix">
                    <%= f.password_field :password, autocomplete: "off", type: 'password', id: 'passwordRegister', name: 'password', placeholder: 'Contraseña', required: "" %>
	            </div>
	            <% if devise_mapping.rememberable? -%>
	                <div class="check_box">
	                    <%= f.check_box :remember_me, id: 'checkboxRegister', type: 'checkbox', class: 'checkbox', style: "display: inline-block;" %>
	                    <%= f.label :__recordarme, style: "color: white;" %>
	                </div>
	            <% end -%>
	            <div class="actions submit-agileits">
	                <%= f.submit "Log In", id: "submitRegister", class: "btn btn-success btn-lg", type: 'submit' %>
				</div>
            <% end %>
            <a id="aRegister" href="#">¿Eres nuevo en <%= @app %>? Regístrate</a>
            <div class="devise-links">
	          <%= render "devise/shared/links" %>
	        </div>
        </div>
	</div>
</div>    


