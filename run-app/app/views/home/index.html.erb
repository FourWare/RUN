<!-- Contact -->
<section class="banner" id="contactenos">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="section-heading" style="color: white;">Contáctanos</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="contactForm" name="sentMessage" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" id="nombre" style="background-color: white; width: 100%" type="text" placeholder="Nombre *" required data-validation-required-message="Por favor ingrese su nombre.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="email" style="background-color: white;" type="email" placeholder="Email *" required data-validation-required-message="Por favor ingrese su email.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="telefono" style="background-color: white;" type="tel" placeholder="Telefono *" required data-validation-required-message="Por favor ingrese su numero de telefono.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" id="message" placeholder="Ingresa tu mensaje *" required data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="sendMessageButton" class="btn btn-primary btn-lg" type="submit">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <span class="copyright">Copyright &copy; <%= @app %> 2017. All Rights Reserved</span>
            </div>
            <div class="col-md-4">
                <ul class="list-inline social-buttons">
                    <li class="list-inline-item">
                        <a href="http://unal.edu.co/" target="_blank">Universidad Nacional de Colombia</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
                <ul class="list-inline quicklinks">
                    <li class="list-inline-item" style="color:black;">
                        <% if user_signed_in? %>
                            <strong  style="text-transform: lowercase;"><%= current_user.email %></strong> |
                            <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
                            <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                        <% else %>
                            <li class="nav-item"><button class="btn btn-default" onclick="document.getElementById('myModal').style.display='block'">Entrar</button></li>
                            &middot;
                            <li class="nav-item"><button class="btn btn-default" onclick="document.getElementById('myModal2').style.display='block'">Registrarme</button></li>
                            
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>

<div id="myModal" class="modal" role="dialog" style="overflow-y: auto; background-color: rgba(0, 0, 0, 0.7);">
    <div class="modal-dialog">
        <div class="wthree-form" id="myModalRegister" style="width: 80%;">
            <button type="button btn-lg" class="close">
                <span class="close glyphicon glyphicon-remove-sign" onclick="document.getElementById('myModal').style.display='none'"></span>
            </button>
        
            <h2 style="text-align: center; font-size: ">Inicia sesión</h2>
            <div class="w3l-login form">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), name: "login_form") do |f| %>
                    <div class="form-sub-w3">
    	                <%= f.email_field :email, id: 'usernameRegister', autofocus: true, placeholder: 'Correo', type: 'email', required: "" %>
    	            </div>
    	            <div class="form-sub-w3 form-group clearfix">
                        <%= f.password_field :password, autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Contraseña', required: "" %>
    	            </div>
    	            <% if devise_mapping.rememberable? -%>
    	                <div class="check_box">
    	                    <%= f.check_box :remember_me, id: 'checkboxRegister', type: 'checkbox', class: 'checkbox', style: "display: inline-block;" %>
    	                    <%= f.label :__recordarme, style: "color: white;" %>
    	                </div>
    	            <% end -%>
    	            <div class="actions submit-agileits">
    	                <%= f.submit "Entrar", id: "submitRegister", class: "btn btn-success btn-lg", type: 'submit' %>
    				</div>
                <% end %>
                <div class="devise-links">
                    <%= link_to "¿Eres nuevo en RunApp? Regístrate", new_registration_path(resource_name) %><br />
    	          	<%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %><br />
    	        </div>
            </div>
        </div>
	</div>
</div>    


<div id="myModal2" class="modal" role="dialog" style="overflow-y: auto; background-color: rgba(0, 0, 0, 0.7);">
    <div class="modal-dialog">
        <div class="wthree-form" id="myModalRegister" style="width: 80%;">
            <button type="button btn-lg" class="close">
                <span class="close glyphicon glyphicon-remove-sign" onclick="document.getElementById('myModal2').style.display='none'"></span>
            </button>
        
            <h2 style="text-align: center; font-size: ">Regístrate</h2>
            <div class="w3l-login form">
    			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    		        <%= devise_error_messages! %>
    			    <div class="form-sub-w3">
    		        	<%= f.text_field :name, id: 'usernameRegister', autofocus: true, placeholder: 'Nombre', type: 'text', required: "" %>
    		      	</div>
    		      	<div class="form-sub-w3">
    		        	<%= f.text_field :nick, id: 'usernameRegister', autofocus: true, placeholder: 'Nick', type: 'text', required: "" %>
    		      	</div>
    		      	<div class="form-sub-w3">
    		        	<%= f.text_field :career, id: 'usernameRegister', autofocus: true, placeholder: 'Carrera', type: 'text', required: "" %>
    		      	</div>
    		      	<div class="form-sub-w3">
    		      		<em style="color: white; display: block;">Fecha de nacimiento</em>
    		      		<%= f.date_select :date_of_birth, { 
    		      			:order => [:day, :month, :year], 
    		      			:start_year => Time.now.year - 15, 
    		      			:end_year => 1950, 
    		      			:prompt => {
    		      				day: 'Día', month: 'Mes', year: 'Año'
    		      			}},
    		      			{:class => "form-control date-select"}
    		        	%>
    		        	<br></br>
    		      	</div>
    			    <div class="form-sub-w3">
    		        	<%= f.email_field :email, id: 'usernameRegister', autofocus: true, placeholder: 'Correo', type: 'email', required: "" %>
    		      	</div>
    		      	<div class="form-sub-w3 form-group clearfix">
    	          		<%= f.password_field :password, autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Contraseña', required: "" %>
    		          	<% if @minimum_password_length %>
    		            	<em style="color: red;">(<%= @minimum_password_length %> characters minimum)</em>
    		          	<% end %><br />
    			    </div>
    		      	<div class="form-sub-w3 form-group clearfix">
    		        	<%= f.password_field :password_confirmation, autocomplete: "off", type: 'password', id: 'passwordRegister', placeholder: 'Confirmación contraseña', required: "" %>
    		      	</div>
    	            <div class="actions submit-agileits">
    	                <%= f.submit "Registrarme", id: "submitRegister", class: "btn btn-primary btn-lg", type: 'submit' %>
    				</div>
    				<div class="devise-links">
    	                <%= link_to "¿Ya eres miembro de RunApp? Ingresa", new_session_path(resource_name) %><br />
    	            </div>
                <% end %>
    		</div>
    	</div>
    </div>    
</div>